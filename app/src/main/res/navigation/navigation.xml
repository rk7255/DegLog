<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/diaryFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/diaryFragment"
        android:name="jp.ryuk.deglog.ui.dashboard.DashboardFragment"
        android:label="fragment_diary"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_diaryFragment_to_newDiaryFragment"
            app:destination="@id/newDiaryFragment"
            app:enterAnim="@anim/spread_in"
            app:exitAnim="@anim/spread_out"
            app:popEnterAnim="@anim/spread_pop_out"
            app:popExitAnim="@anim/spread_pop_in" />
        <action
            android:id="@+id/action_diaryFragment_to_diaryDetailFragment"
            app:destination="@id/diaryListFragment"
            app:enterAnim="@anim/spread_in"
            app:exitAnim="@anim/spread_out"
            app:popEnterAnim="@anim/spread_pop_out"
            app:popExitAnim="@anim/spread_pop_in" />
    </fragment>
    <fragment
        android:id="@+id/chartFragment"
        android:name="jp.ryuk.deglog.ui.chart.ChartFragment"
        android:label="fragment_chart"
        tools:layout="@layout/fragment_chart" />
    <fragment
        android:id="@+id/reminderFragment"
        android:name="jp.ryuk.deglog.ui.profile.ProfilesFragment"
        android:label="fragment_reminder"
        tools:layout="@layout/fragment_profiles" />
    <fragment
        android:id="@+id/newDiaryFragment"
        android:name="jp.ryuk.deglog.ui.newdiary.NewDiaryFragment"
        android:label="fragment_new_diary"
        tools:layout="@layout/fragment_new_diary">
        <argument
            android:name="fromKey"
            app:argType="integer" />
        <argument
            android:name="diaryKey"
            app:argType="long" />
        <argument
            android:name="selectedName"
            app:argType="string" />
        <action
            android:id="@+id/action_newDiaryFragment_to_diaryFragment"
            app:destination="@id/diaryFragment"
            app:enterAnim="@anim/spread_pop_out"
            app:exitAnim="@anim/spread_pop_in"
            app:popEnterAnim="@anim/spread_in"
            app:popExitAnim="@anim/spread_out"
            app:popUpTo="@id/diaryFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_newDiaryFragment_pop"
            app:popUpTo="@id/newDiaryFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_newDiaryFragment_to_diaryListFragment"
            app:destination="@id/diaryListFragment"
            app:enterAnim="@anim/spread_in"
            app:exitAnim="@anim/spread_out"
            app:popEnterAnim="@anim/spread_pop_out"
            app:popExitAnim="@anim/spread_pop_in"
            app:popUpTo="@id/diaryListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/diaryListFragment"
        android:name="jp.ryuk.deglog.ui.diarylist.DiaryListFragment"
        android:label="DiaryListFragment"
        tools:layout="@layout/fragment_diary_list">
        <argument
            android:name="fromKey"
            app:argType="integer"/>
        <argument
            android:name="selectedName"
            app:argType="string" />
        <action
            android:id="@+id/action_diaryListFragment_to_diaryDetailFragment"
            app:enterAnim="@anim/spread_in"
            app:exitAnim="@anim/spread_out"
            app:popEnterAnim="@anim/spread_pop_out"
            app:popExitAnim="@anim/spread_pop_in"
            app:destination="@id/diaryDetailFragment" />

    </fragment>
    <fragment
        android:id="@+id/diaryDetailFragment"
        android:name="jp.ryuk.deglog.ui.diarydetail.DiaryDetailFragment"
        android:label="DiaryDetailFragment"
        tools:layout="@layout/fragment_diary_detail">
        <argument
            android:name="fromKey"
            app:argType="integer" />
        <argument
            android:name="diaryKey"
            app:argType="long" />
        <argument
            android:name="selectedName"
            app:argType="string" />
        <action
            android:id="@+id/action_diaryDetailFragment_to_diaryListFragment"
            app:destination="@id/diaryListFragment"
            app:popUpTo="@id/diaryListFragment"
            app:enterAnim="@anim/spread_pop_out"
            app:exitAnim="@anim/spread_pop_in"
            app:popEnterAnim="@anim/spread_in"
            app:popExitAnim="@anim/spread_out"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_diaryDetailFragment_to_newDiaryFragment"
            app:destination="@id/newDiaryFragment"
            app:enterAnim="@anim/spread_in"
            app:exitAnim="@anim/spread_out"
            app:popEnterAnim="@anim/spread_pop_out"
            app:popExitAnim="@anim/spread_pop_in"/>
    </fragment>
</navigation>