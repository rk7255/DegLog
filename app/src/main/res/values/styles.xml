<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogStyle</item>
    </style>

    <style name="Widget.Deglog.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">?theme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Deglog.Toolbar</item>
    </style>

    <style name="TextAppearance.Deglog.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Deglog.EditText" parent='Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense' />

    <style name="Widget.Deglog.EditText_DropDown" parent='Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu' />

    <style name="MyTimePickerDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/primaryTextColor</item>
    </style>

    <style name="Deglog.PageTitle" parent="@style/TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="Widget.Deglog.Button.Suffix" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
    </style>


    <!--  Dashboard  -->
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">49%</item>
    </style>

    <style name="Deglog.Dashboard.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">monospace</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="DashboardTitle">
        <item name="android:textAppearance">@style/Deglog.Dashboard.Title</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Deglog.Dashboard.SubTitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:gravity">center</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Deglog.Dashboard.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:gravity">center</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Deglog.Dashboard.Main1" parent="Deglog.Dashboard.Body">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Deglog.Dashboard.Main2" parent="Deglog.Dashboard.Body">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LoadingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DashboardContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="DashboardIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:tint">@color/primaryDarkColor</item>
    </style>

</resources>
