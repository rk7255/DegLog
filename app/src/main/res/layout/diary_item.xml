<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="diary"
            type="jp.ryuk.deglog.data.Diary" />
        <variable
            name="clickListener"
            type="jp.ryuk.deglog.adapters.DiaryListener" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/padding_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_diary_item_diary"
                diaryDateFormatted="@{diary.date}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                tools:text="2020/03/03"
                android:textSize="@dimen/diary_item_date"
                android:textColor="@color/primaryTextColor"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                app:layout_constraintEnd_toStartOf="@+id/text_diary_item_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_diary_item_name"
                android:layout_width="wrap_content"
                diaryName="@{diary.name}"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="@dimen/diary_item_name"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                tools:text="ナツ"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


