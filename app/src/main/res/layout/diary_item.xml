<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="diary"
            type="jp.ryuk.deglog.data.Diary" />

        <variable
            name="clickListener"
            type="jp.ryuk.deglog.adapters.DiaryListener" />

    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_diary_item_diary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                diaryDateFormatted="@{diary.date}"
                android:text="date" />

            <TextView
                android:id="@+id/text_diary_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                diaryName="@{diary.name}"
                android:text="name" />

            <TextView
                android:id="@+id/text_diary_item_weight"
                android:layout_width="wrap_content"
                diaryWeightFormatted="@{diary.weight}"
                android:layout_height="wrap_content"
                android:text="weight" />

            <TextView
                android:id="@+id/text_diary_item_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                diaryLengthFormatted="@{diary.length}"
                android:text="length" />

            <TextView
                android:id="@+id/text_diary_item_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                diaryMemoFormatted="@{diary.memo}"
                android:text="memo" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>