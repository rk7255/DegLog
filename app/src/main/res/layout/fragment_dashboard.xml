<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="jp.ryuk.deglog.ui.dashboard.DashboardViewModel" />

        <variable
            name="key"
            type="jp.ryuk.deglog.ui.diarylist.ListKey" />

        <variable
            name="call"
            type="jp.ryuk.deglog.ui.dashboard.OnCallKey" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor"
        android:elevation="0dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:elevation="4dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/db_app_bar"
                style="@style/Widget.Deglog.Toolbar"
                app:layout_scrollFlags="scroll|enterAlways"
                app:title="@string/title_diary" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Section Loading -->
        <LinearLayout
            isGone="@{viewModel.allLoaded}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:elevation="4dp"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:visibility="gone">

            <ProgressBar
                android:id="@+id/db_progress"
                style="?android:attr/progressBarStyle"
                isGone="@{viewModel.allLoaded}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />

            <TextView
                style="@style/LoadingText"
                isGone="@{viewModel.diariesLoaded}"
                android:text="@string/load_diaries"
                android:textAppearance="@style/Deglog.Dashboard.Body" />

            <TextView
                style="@style/LoadingText"
                isGone="@{viewModel.profilesLoaded}"
                android:text="@string/load_profiles"
                android:textAppearance="@style/Deglog.Dashboard.Body" />

            <TextView
                style="@style/LoadingText"
                isGone="@{viewModel.namesLoaded}"
                android:text="@string/load_names"
                android:textAppearance="@style/Deglog.Dashboard.Body" />

        </LinearLayout>

        <!-- Section Dashboard -->
        <LinearLayout
            isGone="@{!viewModel.allLoaded}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryColor"
            android:elevation="4dp"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/db_personal_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/colorBackground"
                    android:elevation="8dp"
                    android:onClick="@{() -> viewModel.onCall(call.PERSONAL_ICON)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/db_personal_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    app:srcCompat="@drawable/img_degu" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/db_personal_container"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/colorBackground"
                    android:elevation="8dp"
                    android:onClick="@{() -> viewModel.onCall(call.PERSONAL_CONTAINER)}"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/db_personal_icon"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/db_personal_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:text="@{viewModel.selected}"
                            android:textAppearance="@style/Deglog.Dashboard.Body"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="名前" />

                        <TextView
                            android:id="@+id/db_personal_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="24dp"
                            android:text="@{viewModel.age}"
                            android:textAppearance="@style/Deglog.Dashboard.Body"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="10歳 13ヶ月 32日" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- SECTION PERSONAL -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/db_notify_container"
                        style="@style/DashboardContainer"
                        isGone="@{!viewModel.hasNotify}"
                        android:onClick="@{() -> viewModel.onCall(call.NOTIFY_CONTAINER)}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/db_notify_icon"
                                style="@style/DashboardIcon"
                                android:layout_marginEnd="16dp"
                                android:src="@drawable/ic_error"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/db_notify_guideline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/db_notify_title"
                                style="@style/DashboardTitle"
                                android:layout_marginStart="16dp"
                                android:text="― 重要な通知 ―"
                                android:textAppearance="@style/Deglog.Dashboard.Title"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/db_notify_guideline"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/db_notify_first"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="未確認のTODOがあります"
                                android:textAppearance="@style/Deglog.Dashboard.Body"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/db_notify_title"
                                app:layout_constraintStart_toStartOf="@+id/db_notify_title"
                                app:layout_constraintTop_toBottomOf="@+id/db_notify_title" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/db_notify_guideline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.25" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <!-- SECTION WEIGHT -->

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/db_weight_container"
                        style="@style/DashboardContainer"
                        android:onClick="@{() -> viewModel.onCall(call.WEIGHT_CONTAINER)}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/db_weight_title"
                                style="@style/DashboardTitle"
                                android:layout_marginEnd="16dp"
                                android:text="― 体重 ―"
                                app:layout_constraintEnd_toStartOf="@+id/db_weight_guideline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/db_weight_latest"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="@{viewModel.weight.latest}"
                                android:textAppearance="@style/Deglog.Dashboard.Main1"
                                app:layout_constraintEnd_toStartOf="@+id/db_weight_latest_unit"
                                app:layout_constraintStart_toStartOf="@+id/db_weight_title"
                                app:layout_constraintTop_toBottomOf="@+id/db_weight_title"
                                tools:text="1.25" />

                            <TextView
                                android:id="@+id/db_weight_latest_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@{viewModel.weight.unit}"
                                android:textAppearance="@style/Deglog.Dashboard.Main2"
                                app:layout_constraintBottom_toBottomOf="@+id/db_weight_latest"
                                app:layout_constraintEnd_toEndOf="@+id/db_weight_title"
                                tools:text="kg" />

                            <TextView
                                android:id="@+id/db_weight_prev_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="前回"
                                android:textAppearance="@style/Deglog.Dashboard.SubTitle"
                                app:layout_constraintStart_toStartOf="@+id/db_weight_latest"
                                app:layout_constraintTop_toBottomOf="@+id/db_weight_latest" />

                            <TextView
                                android:id="@+id/db_weight_prev"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@{viewModel.weight.prev}"
                                android:textAppearance="@style/Deglog.Dashboard.Body"
                                android:textColor="@{viewModel.weight.prevPlus ? @color/blue : @color/pink}"
                                app:layout_constraintBottom_toBottomOf="@+id/db_weight_prev_title"
                                app:layout_constraintEnd_toStartOf="@+id/db_weight_prev_unit"
                                app:layout_constraintStart_toEndOf="@+id/db_weight_prev_title"
                                app:layout_constraintTop_toTopOf="@+id/db_weight_prev_title"
                                app:layout_constraintVertical_bias="0.0"
                                tools:text="- 0.05" />

                            <TextView
                                android:id="@+id/db_weight_prev_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.weight.unit}"
                                android:textAppearance="@style/Deglog.Dashboard.Body"
                                app:layout_constraintBottom_toBottomOf="@+id/db_weight_prev"
                                app:layout_constraintEnd_toEndOf="@+id/db_weight_latest_unit"
                                app:layout_constraintTop_toTopOf="@+id/db_weight_prev"
                                tools:text="kg" />

                            <TextView
                                android:id="@+id/db_weight_recent_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="最近"
                                android:textAppearance="@style/Deglog.Dashboard.SubTitle"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/db_weight_latest"
                                app:layout_constraintTop_toBottomOf="@+id/db_weight_prev_title" />

                            <TextView
                                android:id="@+id/db_weight_recent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@{viewModel.weight.recent}"
                                android:textAppearance="@style/Deglog.Dashboard.Body"
                                android:textColor="@{viewModel.weight.recentPlus ? @color/blue : @color/pink}"
                                app:layout_constraintBottom_toBottomOf="@+id/db_weight_recent_title"
                                app:layout_constraintEnd_toStartOf="@+id/db_weight_recent_unit"
                                app:layout_constraintStart_toEndOf="@+id/db_weight_recent_title"
                                app:layout_constraintTop_toTopOf="@+id/db_weight_recent_title"
                                tools:text="+ 0.4" />

                            <TextView
                                android:id="@+id/db_weight_recent_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.weight.unit}"
                                android:textAppearance="@style/Deglog.Dashboard.Body"
                                app:layout_constraintBottom_toBottomOf="@+id/db_weight_recent"
                                app:layout_constraintEnd_toEndOf="@+id/db_weight_latest_unit"
                                app:layout_constraintTop_toTopOf="@+id/db_weight_recent"
                                tools:text="kg" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/db_weight_guideline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="vertical"
                                app:layout_constraintGuide_begin="160dp"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/db_weight_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:gravity="end"
                                android:text="@{viewModel.weight.date}"
                                android:textAppearance="@style/Deglog.Dashboard.Body"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/db_weight_guideline"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="2020/03/03" />

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/db_weight_chart"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintBottom_toBottomOf="@+id/db_weight_recent"
                                app:layout_constraintEnd_toEndOf="@+id/db_weight_date"
                                app:layout_constraintStart_toStartOf="@+id/db_weight_date"
                                app:layout_constraintTop_toBottomOf="@+id/db_weight_title" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <!-- SECTION LENGTH -->

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/db_length_container"
                        style="@style/DashboardContainer"
                        android:onClick="@{() -> viewModel.onCall(call.LENGTH_CONTAINER)}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/db_length_title"
                                style="@style/DashboardTitle"
                                android:layout_marginEnd="16dp"
                                android:text="― 体長 ―"
                                app:layout_constraintEnd_toStartOf="@+id/db_length_guideline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/db_length_latest"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="@{viewModel.length.latest}"
                                android:textAppearance="@style/Deglog.Dashboard.Main1"
                                app:layout_constraintEnd_toStartOf="@+id/db_length_latest_unit"
                                app:layout_constraintStart_toStartOf="@+id/db_length_title"
                                app:layout_constraintTop_toBottomOf="@+id/db_length_title"
                                tools:text="3000" />

                            <TextView
                                android:id="@+id/db_length_latest_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@{viewModel.length.unit}"
                                android:textAppearance="@style/Deglog.Dashboard.Main2"
                                app:layout_constraintBottom_toBottomOf="@+id/db_length_latest"
                                app:layout_constraintEnd_toEndOf="@+id/db_length_title"
                                tools:text="mm" />

                            <TextView
                                android:id="@+id/db_length_prev_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="前回"
                                android:textAppearance="@style/Deglog.Dashboard.SubTitle"
                                app:layout_constraintStart_toStartOf="@+id/db_length_latest"
                                app:layout_constraintTop_toBottomOf="@+id/db_length_latest" />

                            <TextView
                                android:id="@+id/db_length_prev"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@{viewModel.length.prev}"
                                android:textAppearance="@style/Deglog.Dashboard.Body"
                                android:textColor="@{viewModel.length.prevPlus ? @color/blue : @color/pink}"
                                app:layout_constraintBottom_toBottomOf="@+id/db_length_prev_title"
                                app:layout_constraintEnd_toStartOf="@+id/db_length_prev_unit"
                                app:layout_constraintStart_toEndOf="@+id/db_length_prev_title"
                                app:layout_constraintTop_toTopOf="@+id/db_length_prev_title"
                                app:layout_constraintVertical_bias="0.0"
                                tools:text="- 5" />

                            <TextView
                                android:id="@+id/db_length_prev_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.length.unit}"
                                android:textAppearance="@style/Deglog.Dashboard.Body"
                                app:layout_constraintBottom_toBottomOf="@+id/db_length_prev"
                                app:layout_constraintEnd_toEndOf="@+id/db_length_latest_unit"
                                app:layout_constraintTop_toTopOf="@+id/db_length_prev"
                                tools:text="mm" />

                            <TextView
                                android:id="@+id/db_length_recent_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="最近"
                                android:textAppearance="@style/Deglog.Dashboard.SubTitle"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/db_length_latest"
                                app:layout_constraintTop_toBottomOf="@+id/db_length_prev_title" />

                            <TextView
                                android:id="@+id/db_length_recent"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@{viewModel.length.recent}"
                                android:textAppearance="@style/Deglog.Dashboard.Body"
                                android:textColor="@{viewModel.length.recentPlus ? @color/blue : @color/pink}"
                                app:layout_constraintBottom_toBottomOf="@+id/db_length_recent_title"
                                app:layout_constraintEnd_toStartOf="@+id/db_length_recent_unit"
                                app:layout_constraintStart_toEndOf="@+id/db_length_recent_title"
                                app:layout_constraintTop_toTopOf="@+id/db_length_recent_title"
                                tools:text="+ 20" />

                            <TextView
                                android:id="@+id/db_length_recent_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.length.unit}"
                                android:textAppearance="@style/Deglog.Dashboard.Body"
                                app:layout_constraintBottom_toBottomOf="@+id/db_length_recent"
                                app:layout_constraintEnd_toEndOf="@+id/db_length_latest_unit"
                                app:layout_constraintTop_toTopOf="@+id/db_length_recent"
                                tools:text="mm" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/db_length_guideline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="vertical"
                                app:layout_constraintGuide_begin="160dp"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/db_length_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:gravity="end"
                                android:text="@{viewModel.length.date}"
                                android:textAppearance="@style/Deglog.Dashboard.Body"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/db_length_guideline"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="2020/03/03" />

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/db_length_chart"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintBottom_toBottomOf="@+id/db_length_recent"
                                app:layout_constraintEnd_toEndOf="@+id/db_length_date"
                                app:layout_constraintStart_toStartOf="@+id/db_length_date"
                                app:layout_constraintTop_toBottomOf="@+id/db_length_date" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <!-- SECTION TODOs -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/db_todo_container"
                        style="@style/DashboardContainer"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/db_todo_icon"
                                style="@style/DashboardIcon"
                                android:layout_marginEnd="16dp"
                                android:onClick="@{() -> viewModel.onCall(call.TODO_CONTAINER)}"
                                android:src="@drawable/ic_todo"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/db_todo_guideline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/db_todo_guideline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.25" />

                            <TextView
                                android:id="@+id/db_todo_title"
                                style="@style/DashboardTitle"
                                android:layout_marginStart="16dp"
                                android:text="― TODO ―"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/db_todo_guideline"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                isGone="@{viewModel.hasTodo}"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Todoはありません"
                                android:textAppearance="@style/Deglog.Dashboard.Body"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/db_todo_guideline"
