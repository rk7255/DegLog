<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="jp.ryuk.deglog.ui.profile.newprofile.NewProfileViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view_color"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:background="@color/pink"
                android:layout_marginStart="-50dp"
                android:layout_marginTop="-50dp"
                android:rotation="45" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/new_profile_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/new_profile_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xl"
                        android:layout_marginBottom="@dimen/margin_xl"
                        android:text="@string/title_new_profile"
                        android:textAppearance="@style/Deglog.PageTitle" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/new_profile_edit_name"
                        style="@style/Widget.Deglog.EditText"
                        android:layout_width="@dimen/edit_text_width"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/nav_ic_diary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_profile_edit_name_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_name"
                            android:inputType="none"
                            android:singleLine="true"
                            android:text="@={viewModel.name}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/new_profile_toggle_group_gender"
                        android:layout_width="@dimen/edit_text_width"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_l"
                        android:gravity="center"
                        app:checkedButton="@id/gender_unknown"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/gender_male"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/gender_male" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/gender_female"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/gender_female" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/gender_unknown"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/gender_unknown" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ラベル"
                        android:textSize="14sp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/label_color_container"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/label_color_red"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="16dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:onClick="@{() -> viewModel.onSelectColor(0)}"
                            android:padding="0dp"
                            app:backgroundTint="@color/pink"
                            app:layout_constraintEnd_toStartOf="@+id/label_color_blue"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/circleImageView"
                            tools:background="@color/pink" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/label_color_blue"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:onClick="@{() -> viewModel.onSelectColor(1)}"
                            android:padding="0dp"
                            app:backgroundTint="@color/blue"
                            app:layout_constraintEnd_toStartOf="@+id/label_color_green"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/label_color_red"
                            app:layout_constraintTop_toTopOf="@+id/label_color_red"
                            app:shapeAppearanceOverlay="@style/circleImageView"
                            tools:background="@color/blue" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/label_color_green"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:onClick="@{() -> viewModel.onSelectColor(2)}"
                            android:padding="0dp"
                            app:backgroundTint="@color/green"
                            app:layout_constraintEnd_toStartOf="@+id/label_color_yellow"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/label_color_blue"
                            app:layout_constraintTop_toTopOf="@+id/label_color_blue"
                            app:shapeAppearanceOverlay="@style/circleImageView"
                            tools:background="@color/green" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/label_color_yellow"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:onClick="@{() -> viewModel.onSelectColor(3)}"
                            android:padding="0dp"
                            app:backgroundTint="@color/yellow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/label_color_green"
                            app:layout_constraintTop_toTopOf="@+id/label_color_green"
                            app:shapeAppearanceOverlay="@style/circleImageView"
                            tools:background="@color/yellow" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/label_color_orange"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:onClick="@{() -> viewModel.onSelectColor(4)}"
                            android:padding="0dp"
                            app:backgroundTint="@color/orange"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/label_color_purple"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/label_color_red"
                            app:shapeAppearanceOverlay="@style/circleImageView"
                            tools:background="@color/orange" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/label_color_purple"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:onClick="@{() -> viewModel.onSelectColor(5)}"
                            android:padding="0dp"
                            app:backgroundTint="@color/purple"
                            app:layout_constraintEnd_toStartOf="@+id/label_color_brown"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/label_color_orange"
                            app:layout_constraintTop_toTopOf="@+id/label_color_orange"
                            app:shapeAppearanceOverlay="@style/circleImageView"
                            tools:background="@color/purple" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/label_color_brown"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:onClick="@{() -> viewModel.onSelectColor(6)}"
                            android:padding="0dp"
                            app:backgroundTint="@color/primaryColor"
                            app:layout_constraintEnd_toStartOf="@+id/label_color_gray"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/label_color_purple"
                            app:layout_constraintTop_toTopOf="@+id/label_color_purple"
                            app:shapeAppearanceOverlay="@style/circleImageView"
                            tools:background="@color/primaryColor" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/label_color_gray"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:onClick="@{() -> viewModel.onSelectColor(7)}"
                            android:padding="0dp"
                            app:backgroundTint="@color/gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/label_color_brown"
                            app:layout_constraintTop_toTopOf="@+id/label_color_brown"
                            app:shapeAppearanceOverlay="@style/circleImageView"
                            tools:background="@color/gray" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/new_profile_edit_type"
                        style="@style/Widget.Deglog.EditText"
                        android:layout_width="@dimen/edit_text_width"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_l"
                        android:hint="@string/type"
                        app:endIconDrawable="@drawable/ic_picker"
                        app:endIconMode="custom"
                        app:startIconDrawable="@drawable/nav_ic_diary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_profile_edit_type_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:singleLine="true"
                            android:text="@={viewModel.type}" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/new_profile_edit_birthday"
                            style="@style/Widget.Deglog.EditText"
                            android:layout_width="@dimen/edit_text_width"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_marginBottom="@dimen/margin_l"
                            app:errorEnabled="true"
                            app:hintAnimationEnabled="false"
                            app:startIconDrawable="@drawable/ic_birthday">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/new_profile_edit_birthday_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="@string/birthday"
                                android:inputType="datetime"
                                android:text="@={viewModel.birthdayString}" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:onClick="@{() -> viewModel.onBirthday()}" />

                    </FrameLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="@dimen/edit_text_width"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_l">

                        <TextView
                            android:id="@+id/unit_weight"
                            android:layout_width="@dimen/edit_text_width_half"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/hint_weight_unit"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/unit_length"
                            android:layout_width="@dimen/edit_text_width_half"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/hint_length_unit"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/new_profile_edit_weight_unit"
                            style="@style/Widget.Deglog.EditText"
                            android:layout_width="@dimen/edit_text_width_half"
                            android:layout_height="wrap_content"
                            app:endIconDrawable="@drawable/ic_picker"
                            app:endIconMode="custom"
                            app:layout_constraintEnd_toEndOf="@id/unit_weight"
                            app:layout_constraintStart_toStartOf="@id/unit_weight"
                            app:layout_constraintTop_toBottomOf="@+id/unit_weight">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/new_profile_edit_weight_unit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:gravity="center_horizontal"
                                android:inputType="none"
                                android:singleLine="true"
                                android:text="@={viewModel.weightUnit}" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/new_profile_edit_length_unit"
                            style="@style/Widget.Deglog.EditText"
                            android:layout_width="@dimen/edit_text_width_half"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_l"
                            app:endIconDrawable="@drawable/ic_picker"
                            app:endIconMode="custom"
                            app:layout_constraintEnd_toEndOf="@id/unit_length"
                            app:layout_constraintStart_toStartOf="@id/unit_length"
                            app:layout_constraintTop_toBottomOf="@id/unit_length">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/new_profile_edit_length_unit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:gravity="center_horizontal"
                                android:inputType="none"
                                android:singleLine="true"
                                android:text="@={viewModel.lengthUnit}" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_m"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/new_profile_cancel_button"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_l"
                            android:onClick="@{() -> viewModel.onCancel()}"
                            android:text="@string/dialog_cancel" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/new_profile_submit_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_l"
                            android:onClick="@{() -> viewModel.onSubmit()}"
                            android:text="@string/dialog_submit" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>