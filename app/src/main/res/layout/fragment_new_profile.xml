<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="jp.ryuk.deglog.ui.profile.newprofile.NewProfileViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/new_profile_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/new_profile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:textAppearance="@style/Deglog.PageTitle"
                    android:text="@string/new_profile_title" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_profile_edit_name"
                    style="@style/Widget.Deglog.EditText"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:startIconDrawable="@drawable/nav_ic_diary">

                    <AutoCompleteTextView
                        android:id="@+id/new_profile_edit_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_name"
                        android:inputType="none"
                        android:singleLine="true"
                        android:text="@={viewModel.name}" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性別"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/new_profile_toggle_group"
                    app:checkedButton="@id/gender_unknown"
                    app:selectionRequired="true"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/gender_male"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_gender_male" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/gender_female"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_gender_female" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/gender_unknown"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_gender_unknown" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/new_profile_edit_type"
                        style="@style/Widget.Deglog.EditText"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/nav_ic_diary"
                        app:endIconDrawable="@drawable/ic_picker"
                        app:endIconMode="custom"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/hint_type">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_profile_edit_type_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:singleLine="true"
                            android:text="@={viewModel.type}" />

                    </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_profile_edit_birthday"
                    style="@style/Widget.Deglog.EditText"
                    android:layout_width="300dp"
                    android:layout_marginBottom="16dp"
                    android:layout_height="wrap_content"
                    app:hintAnimationEnabled="false"
                    app:errorEnabled="true"
                    app:startIconDrawable="@drawable/ic_birthday">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_profile_edit_birthday_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_birthday"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:inputType="datetime"
                        android:text="@={viewModel.birthdayString}" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="300dp"
                    android:layout_marginBottom="16dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="140dp"
                        android:id="@+id/unit_weight"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/hint_weight_unit"/>

                    <TextView
                        android:layout_width="140dp"
                        android:id="@+id/unit_length"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/hint_length_unit"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/new_profile_edit_weight_unit"
                        style="@style/Widget.Deglog.EditText"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        app:endIconDrawable="@drawable/ic_picker"
                        app:endIconMode="custom"
                        app:layout_constraintEnd_toEndOf="@id/unit_weight"
                        app:layout_constraintStart_toStartOf="@id/unit_weight"
                        app:layout_constraintTop_toBottomOf="@+id/unit_weight">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_profile_edit_weight_unit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="none"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:text="@={viewModel.unitWeight}" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/new_profile_edit_length_unit"
                        style="@style/Widget.Deglog.EditText"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintStart_toStartOf="@id/unit_length"
                        app:layout_constraintEnd_toEndOf="@id/unit_length"
                        app:layout_constraintTop_toBottomOf="@id/unit_length"
                        app:endIconDrawable="@drawable/ic_picker"
                        app:endIconMode="custom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_profile_edit_length_unit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:gravity="center_horizontal"
                            android:focusableInTouchMode="false"
                            android:inputType="none"
                            android:singleLine="true"
                            android:text="@={viewModel.unitLength}" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/new_profile_cancel_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> viewModel.onCancel()}"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:text="Cancel" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/new_profile_submit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> viewModel.onSubmit()}"
                        android:layout_marginStart="@dimen/margin_large"
                        android:text="Submit" />
                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>