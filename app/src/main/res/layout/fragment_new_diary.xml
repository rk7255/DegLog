<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="jp.ryuk.deglog.ui.viewmodels.NewDiaryViewModel" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fitsSystemWindows="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            app:elevation="8dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/new_diary_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackground"
                android:fitsSystemWindows="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/new_diary_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xl"
                    android:layout_marginBottom="@dimen/margin_xl"
                    android:textAppearance="@style/Deglog.PageTitle"
                    tools:text="@string/title_new_diary" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/new_diary_edit_date"
                        style="@style/Widget.Deglog.EditText"
                        android:layout_width="@dimen/edit_text_width"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginBottom="@dimen/margin_l"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        app:hintAnimationEnabled="false"
                        app:startIconDrawable="@drawable/ic_calendar">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_diary_edit_date_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/date"
                            android:inputType="datetime"
                            android:text="@={viewModel.dateOfString}" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:onClick="@{() -> viewModel.onDate()}" />

                </FrameLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_diary_edit_name"
                    style="@style/Widget.Deglog.EditText"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="wrap_content"
                    app:endIconDrawable="@drawable/ic_picker"
                    app:endIconMode="custom"
                    app:errorEnabled="true"
                    app:startIconDrawable="@drawable/nav_ic_diary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_diary_edit_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_name"
                        android:inputType="none"
                        android:singleLine="true"
                        android:text="@={viewModel.name}" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_marginBottom="@dimen/margin_l"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/new_diary_edit_weight"
                        style="@style/Widget.Deglog.EditText"
                        android:layout_width="@dimen/edit_text_width_mini"
                        android:layout_height="@dimen/edit_text_height"
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_weight">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_diary_edit_weight_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/weight"
                            android:inputType="numberDecimal"
                            android:text="@={viewModel.weight}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/new_diary_edit_weight_text_suffix"
                        style="@style/Widget.Deglog.Button.Suffix"
                        android:layout_width="@dimen/edit_text_height"
                        android:layout_height="@dimen/edit_text_height"
                        android:onClick="@{() -> viewModel.cycleUnitWeight()}"
                        android:text="@{viewModel.weightUnit}"
                        tools:text="kg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_marginBottom="@dimen/margin_l"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/new_diary_edit_length"
                        style="@style/Widget.Deglog.EditText"
                        android:layout_width="@dimen/edit_text_width_mini"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginBottom="@dimen/margin_l"
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_length">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_diary_edit_length_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/length"
                            android:inputType="numberDecimal"
                            android:text="@={viewModel.length}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/new_diary_edit_length_text_suffix"
                        style="@style/Widget.Deglog.Button.Suffix"
                        android:layout_width="@dimen/edit_text_height"
                        android:layout_height="@dimen/edit_text_height"
                        android:onClick="@{() -> viewModel.cycleUnitLength()}"
                        android:text="@{viewModel.lengthUnit}"
                        tools:text="mm" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_diary_edit_memo"
                    style="@style/Widget.Deglog.EditText"
                    android:layout_width="@dimen/edit_text_width"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_l"
                    app:errorEnabled="true"
                    app:startIconDrawable="@drawable/ic_memo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_diary_edit_memo_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/memo"
                        android:lines="3"
                        android:maxLines="3"
                        android:text="@={viewModel.memo}" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_s"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cancel_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_l"
                        android:onClick="@{() -> viewModel.onCancel()}"
                        android:text="@string/dialog_cancel" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/next_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_l"
                        android:onClick="@{() -> viewModel.onSubmit()}"
                        android:text="@string/dialog_submit" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewModel.onAddDebug()}"
                    android:text="データ100追加"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewModel.onDeleteDebug()}"
                    android:text="データ削除"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>